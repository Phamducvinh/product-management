extends ../../layouts/default.pug

block content 
    h1(class="mb-4") Thêm mới nhóm quyền

    form(
        action=`${prefixAdmin}/roles/create`
        id="form-create-role"
        method="POST"
    )
        div(class="form-group")
            label(for="title") Tiêu đề nhóm quyền
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
            )
        div(class="form-group")
            label(for="desc") Mô tả
            input(
                type="text"
                class="form-control"
                id="desc"
                name="description"
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Thêm mới


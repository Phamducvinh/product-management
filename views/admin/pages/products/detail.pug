extends ../../layouts/default.pug


block content 
    if(product)
        h1(class="text-center") Chi tiết sản phẩm
        div(class="row-1")
            div(class="col-md-6")
                if(product.thumbnail)
                    img(
                        src=product.thumbnail
                        style="width: 350px"
                    )
            div(class="col-md-6")
                h2 Tiêu đề: #{product.title}
                p Mô tả: !{product.description}
                p Giá: #{product.price}
                p Giảm giá: #{product.discountPercentage}%
                p Số lượng: #{product.stock}
                p Trạng thái: 
                    if(product.status === "active")
                        span(class="badge badge-success") Đang kinh doanh
                    else
                        span(class="badge badge-danger") Ngừng kinh doanh
                p Vị trí: #{product.position}
                p Ngày tạo: #{product.createdAt}
                p Ngày cập nhật: #{product.updatedAt}
            
            div(class="col-md-12")
                a(
                    href=`${prefixAdmin}/products/edit/${product.id}`
                    class="btn btn-primary"
                ) Chỉnh sửa
                a(
                    href=`${prefixAdmin}/products/delete/${product.id}`
                    class="btn btn-danger"
                ) Xóa
    else
        h1(class="text-center") Sản phẩm không tồn tại

   
    script(src="/admin/js/product.js") 
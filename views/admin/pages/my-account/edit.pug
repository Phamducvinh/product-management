extends ../../layouts/default.pug
include ../../mixins/alert.pug

block content 
    h1(class="mb-4") Chỉnh sửa thông tin cá nhân

    +alert-success(5000)
    +alert-error(5000)

    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullName") Họ và tên
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value=`${user.fullName}`
            )
        
        div(class="form-group")
            label(for="email") Email
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                value=`${user.email}`
            )
        
        div(class="form-group")
            label(for="password") Mật khẩu
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
            )

        
        div(class="form-group")
            label(for="confirmPassword") Xác nhận mật khẩu
            input(
                type="password"
                class="form-control"
                id="confirmPassword"
                name="confirmPassword"
            )
        
        div(class="form-group")
            label(for="phone") Số điện thoại
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=`${user.phone}`
            )
        
        div(class="form-group")
            label(for="address") Địa chỉ
            input(
                type="text"
                class="form-control"
                id="address"
                name="address"
                value=`${user.address}`
            )
        
        div(class="form-group")
            label(for="avatar") Ảnh đại diện
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                src=user.avatar
                class="image-preview"
                upload-image-preview
            )
            

        button(
            type="submit"
            class="btn btn-primary"
        ) Cập nhật thông tin cá nhân
extends ../../layouts/default.pug

block content
    if(product)
        h1(class="text-center") Chi tiết sản phẩm
        div(class="row")
            div(class="col-md-6")
                if(product.thumbnail)
                    img(
                        src=product.thumbnail
                        style="width: 350px"
                    )
            div(class="col-md-6")
                h2 Tiêu đề: #{product.title}
                p Mô tả: #{product.description}
                p Giá: #{product.price}
                p Giảm giá: #{product.discountPercentage}%
                p Số lượng: #{product.stock}
                
                p Vị trí: #{product.position}
    else
        h1(class="text-center") Sản phẩm không tồn tại
extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block content 
    .container.my-3 
        .row 
            .col-12 
                +box-head('Chat', 'fas fa-comments', 'Chat with your friends')

        .row 
            .col-12 
                .chat(my-id=user.id)
                    .inner-body 
                        each chat in chats 
                            div(class=(chat.user_id == user.id ? "inner-outgoing" : "inner-incoming"))
                                if(chat.user_id != user.id)
                                    .inner-name  #{chat.infoUser.fullName}
                                if(chat.content)
                                    .inner-content 
                                        | #{chat.content}
                                if(chat.images)
                                    .inner-images 
                                        each image in chat.images
                                            img(src=image)
                                
                        div(class="inner-list-typing")
                    
                    .inner-preview-images
                        div(
                            class="custom-file-container" 
                            data-upload-id="upload-images"
                        )
                        
                    .inner-foot 
                        form(
                            class="inner-form"
                            action=""
                        )
                            input(
                                type="text"
                                placeholder="Type a message"
                                name="content"
                            )
                            label(
                                class="button-icon btn btn-light mx-2 mb-0"
                                for="file-upload-with-preview-upload-images"
                            ) 
                                i.fa-regular.fa-image
                            span(class="button-icon btn btn-light mx-2") 
                                i.fa-regular.fa-face-smile
                            button
                                i.fa-solid.fa-paper-plane

    div(class="tooltip" role="tooltip")
        emoji-picker

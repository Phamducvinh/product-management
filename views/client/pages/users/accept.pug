extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block content 
    .container.my-3 
        include ../../partials/list-btn-user.pug
        
        .row 
            .col-12 
                +box-head('Lời mời Kết bạn')

        .row(data-users-accept=user.id)
            each user in users
                .col-6(user-id=user.id)
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar ? user.avatar : "/images/avatar.png"),
                                alt=user.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-accept-friend=user.id
                                ) Chấp nhận
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-refuse-friend=user.id
                                ) Từ chối
                                button(
                                    class="btn btn-sm btn-danger"
                                    btn-deleted-friend
                                    disabled
                                ) Đã Xóa
                                button(
                                    class="btn btn-sm btn-success"
                                    btn-accepted-friend
                                    disabled
                                ) Đã Chấp nhận

block script 
    script(src="/js/users.js")
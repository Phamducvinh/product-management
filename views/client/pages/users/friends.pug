extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block content 
    .container.my-3 
        include ../../partials/list-btn-user.pug
        
        .row 
            .col-12 
                +box-head('Danh sách Kết bạn')

        .row(data-users-friend=user.id)
            each user in users
                .col-6(user-id=user.id)
                    div(class="box-user add")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar ? user.avatar : "/images/avatar.png"),
                                alt=user.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                a(
                                    href=`/chat/${user.infoFriend.room_chat_id}`
                                    class="btn btn-primary btn-sm mr-1",
                                    data-id=user._id
                                ) Nhắn tin
                        div(
                            class="inner-status"
                            status=user.statusOnline
                        ) <i class="fa-solid fa-circle"></i> 
block script 
    script(src="/js/users.js")